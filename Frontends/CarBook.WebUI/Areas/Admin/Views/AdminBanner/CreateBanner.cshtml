@using CarBook.Dtos.BannerDtos
@model CreateBannerDto
@{
	ViewData["Title"] = "CreateBanner";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">

		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Banner girişi</h4>
						<p class="card-subtitle mb-4">Banner ile ilgili temel bilgileri eksiksiz doldurunuz.</p>

						<form method="post">
							
							<div class="form-group">
								<label for="exampleInputModel">Banner başlığı</label>
								<input asp-for=Title type="text" class="form-control" id="exampleInputModel" placeholder="Banner başlığı">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Banner açıklaması</label>
								<input asp-for=Description type="text" class="form-control" id="exampleInputModel" placeholder="Banner adı">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Video açıklaması</label>
								<input asp-for=VideoDescription type="text" class="form-control" id="exampleInputModel" placeholder="Video açıklaması">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Video Url</label>
								<input asp-for=VideoURL type="text" class="form-control" id="exampleInputModel" placeholder="Video Url">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</div> 