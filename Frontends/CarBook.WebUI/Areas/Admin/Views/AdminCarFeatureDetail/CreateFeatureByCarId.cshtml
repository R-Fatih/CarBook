@using CarBook.Dtos.CarFeatureDtos
@using CarBook.Dtos.FeatureDtos
@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/Admin/plugins/switchery/switchery.min.css" rel="stylesheet" type="text/css" />

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca ait özellikler ekleme sayfası</h4>
                        <p class="card-subtitle mb-4">

                            Arabalara ait özellikleri bu kısımda tanımlayabilirsiniz.
                        </p>
                        <form method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">

                                    <input type="hidden" asp-for=@Model[i].FeatureId data-toggle="switchery" data-color="#2e7ce4" />
                                    <input type="hidden" asp-for=@Model[i].Name data-toggle="switchery" data-color="#2e7ce4" />
                                    <input type="checkbox" class="form-check-input" data-toggle="switchery" data-color="#2e7ce4" />
                                    <label class="form-check-label" >@Model[i].Name</label>
                                </div>
                            }
                            <br />
                            <button type="submit" class="btn btn-primary">Araca özellikleri ata</button>
                        </form>


                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div>
</div>
