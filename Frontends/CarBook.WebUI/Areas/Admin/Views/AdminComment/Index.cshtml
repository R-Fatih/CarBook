@using CarBook.Dtos.CommentDtos
@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 1;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum listesi - BlogID:@ViewBag.v</h4>
                        <p class="card-subtitle mb-4">
                            Yorum ekleme, silme, güncellemei arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekletirebilirsiniz.
                        </p>
                       
                        @foreach (var item in Model)
                        {
                            
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Yorum @count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">
                                            @item.Description
                                        </p>
                                        <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                    </div>
                                </div>
                            </div>
                        count++;
                        }

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>
