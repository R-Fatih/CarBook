@using CarBook.Dtos.TestimonialDtos
@model UpdateTestimonialDto
@{
	ViewData["Title"] = "UpdateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">

		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Referans güncelleme</h4>
						<p class="card-subtitle mb-4">Referans ile ilgili temel bilgileri eksiksiz doldurunuz.</p>

						<form method="post">
							<input type="hidden" asp-for="TestimonialId" />
							<div class="form-group">
								<label for="exampleInputModel">İsim</label>
								<input asp-for=Name type="text" class="form-control" id="exampleInputModel" placeholder="İsim">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Başlık</label>
								<input asp-for=Title type="text" class="form-control" id="exampleInputModel" placeholder="Başlık">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Yorum</label>
								<input asp-for=Comment type="text" class="form-control" id="exampleInputModel" placeholder="Yorum">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Url</label>
								<input asp-for=ImageUrl type="text" class="form-control" id="exampleInputModel" placeholder="Url">
							</div>
						

							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</div> 