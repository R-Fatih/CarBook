@using CarBook.Dtos.AuthorDtos
@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 1;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazar listesi</h4>
                        <p class="card-subtitle mb-4">
                            Yazar ekleme, silme, güncellemei arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekletirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>İsim</th>
                                        <th>Açıklama</th>
                                        <th>Url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Yazarın Blogları</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <th scope="row">@count</th>
                                            <td><img  src="@item.ImageUrl" width="50" height="50" style="margin-right:10px;"/>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>@item.ImageUrl</td>
                                            <td><a href="/Admin/AdminAuthor/RemoveAuthor/@item.AuthorId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Admin/AdminAuthor/#/@item.AuthorId" class="btn btn-outline-dark">Yazarın Blogları</a></td>

                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                           <a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-primary">Yeni yazar ekle</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>
