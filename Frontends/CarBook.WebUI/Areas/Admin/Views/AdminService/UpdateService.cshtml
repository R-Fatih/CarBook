@using CarBook.Dtos.ServiceDtos
@model UpdateServiceDto
@{
	ViewData["Title"] = "UpdateService";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">

		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Hizmet güncelleme</h4>
						<p class="card-subtitle mb-4">Hizmet ile ilgili temel bilgileri eksiksiz doldurunuz.</p>

						<form method="post">
							<input type="hidden" asp-for="ServiceId" />
							<div class="form-group">
								<label for="exampleInputModel">Başlık</label>
								<input asp-for=Title type="text" class="form-control" id="exampleInputModel" placeholder="Başlık">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Açıklama</label>
								<input asp-for=Description type="text" class="form-control" id="exampleInputModel" placeholder="Açıklama">
							</div>	<div class="form-group">
								<label for="exampleInputModel">İkon</label>
								<input asp-for=IconUrl type="text" class="form-control" id="exampleInputModel" placeholder="İkon">
							</div>
						

							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</div> 