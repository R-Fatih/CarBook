@using CarBook.Dtos.FooterAddressDtos
@model UpdateFooterAddressDto
@{
	ViewData["Title"] = "UpdateFooterAddress";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">

		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Footer adres güncelleme</h4>
						<p class="card-subtitle mb-4">Footer adres ile ilgili temel bilgileri eksiksiz doldurunuz.</p>

						<form method="post">
							<input type="hidden" asp-for="FooterAddressId" />
							<div class="form-group">
								<label for="exampleInputModel">Adres</label>
								<input asp-for=Address type="text" class="form-control" id="exampleInputModel" placeholder="Adres">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Açıklama</label>
								<input asp-for=Description type="text" class="form-control" id="exampleInputModel" placeholder="Açıklama">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Mail</label>
								<input asp-for=Email type="email" class="form-control" id="exampleInputModel" placeholder="Mail">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Telefon</label>
								<input asp-for=Phone type="tel" class="form-control" id="exampleInputModel" placeholder="Telefon">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</div> 