@using CarBook.Dtos.LocationDtos
@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form">
        <div class="form-group">
            <input type="text" readonly class="form-control" placeholder="Almak istediğiniz araba">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Adınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Mail adresiniz">
        </div>
        <div class="form-group">
            <input type="tel" class="form-control" placeholder="Telefon numaranız">
        </div>
        <div class="form-group">
            <label>Alınmak istenen lokasyon</label>
            @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", @id = "drop", @name = "locationId" })

        </div>
        <div class="form-group">
            <label>İade edilecek lokasyon</label>
            @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", @id = "drop", @name = "locationId" })

        </div>
        <div class="form-group">
            <input type="number" class="form-control" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <input type="number" class="form-control" placeholder="Ehliyet Yılınız">
        </div>
        <div class="form-group">
            <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Notlarınız"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
